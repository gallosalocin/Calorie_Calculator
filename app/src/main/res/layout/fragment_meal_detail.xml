<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.mealDetail.MealDetailFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_day_overall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:cardCornerRadius="6dp"
        app:layout_constraintBottom_toTopOf="@id/cv_meal_overall"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_overall_background"
            android:padding="3dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/overall_day_cal_title"
                style="@style/CardViewAllFoodsTitle"
                android:text="@string/calories"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/overall_day_fat_title"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/overall_day_fat_title"
                style="@style/CardViewAllFoodsTitle"
                android:text="@string/fats"
                app:layout_constraintLeft_toRightOf="@id/overall_day_cal_title"
                app:layout_constraintRight_toLeftOf="@id/overall_day_carb_title"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/overall_day_carb_title"
                style="@style/CardViewAllFoodsTitle"
                android:text="@string/carbs"
                app:layout_constraintLeft_toRightOf="@id/overall_day_fat_title"
                app:layout_constraintRight_toLeftOf="@id/overall_day_prot_title"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/overall_day_prot_title"
                style="@style/CardViewAllFoodsTitle"
                android:text="@string/proteins"
                app:layout_constraintLeft_toRightOf="@id/overall_day_carb_title"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/day_cal_total"
                style="@style/DayMacrosValuesResult"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/day_fat_total"
                app:layout_constraintTop_toBottomOf="@id/overall_day_cal_title"
                tools:text="2257" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/day_fat_total"
                style="@style/DayMacrosValuesResult"
                app:layout_constraintLeft_toRightOf="@id/day_cal_total"
                app:layout_constraintRight_toLeftOf="@id/day_carb_total"
                app:layout_constraintTop_toBottomOf="@id/overall_day_cal_title"
                tools:text="68" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/day_carb_total"
                style="@style/DayMacrosValuesResult"
                app:layout_constraintLeft_toRightOf="@id/day_fat_total"
                app:layout_constraintRight_toLeftOf="@id/day_prot_total"
                app:layout_constraintTop_toBottomOf="@id/overall_day_cal_title"
                tools:text="237" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/day_prot_total"
                style="@style/DayMacrosValuesResult"
                app:layout_constraintLeft_toRightOf="@id/day_carb_total"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/overall_day_cal_title"
                tools:text="155" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/expected_day_cal_total"
                style="@style/DayMacrosValuesExpected"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/expected_day_fat_total"
                app:layout_constraintTop_toBottomOf="@id/day_cal_total"
                tools:text="2300" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/expected_day_fat_total"
                style="@style/DayMacrosValuesExpected"
                app:layout_constraintLeft_toRightOf="@id/expected_day_cal_total"
                app:layout_constraintRight_toLeftOf="@id/expected_day_carb_total"
                app:layout_constraintTop_toBottomOf="@id/day_cal_total"
                tools:text="75" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/expected_day_carb_total"
                style="@style/DayMacrosValuesExpected"
                app:layout_constraintLeft_toRightOf="@id/expected_day_fat_total"
                app:layout_constraintRight_toLeftOf="@id/expected_day_prot_total"
                app:layout_constraintTop_toBottomOf="@id/day_cal_total"
                tools:text="225" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/expected_day_prot_total"
                style="@style/DayMacrosValuesExpected"
                app:layout_constraintLeft_toRightOf="@id/expected_day_carb_total"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/day_cal_total"
                tools:text="160" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_meal_overall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:backgroundTint="@color/design_default_color_secondary_variant"
        app:cardCornerRadius="6dp"
        app:layout_constraintBottom_toTopOf="@id/rv_meal_detail"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_day_overall">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/meal_cal_total"
                style="@style/ValuesMacrosMeal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/meal_fat_total"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="2257" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/meal_fat_total"
                style="@style/ValuesMacrosMeal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/meal_cal_total"
                app:layout_constraintRight_toLeftOf="@id/meal_carb_total"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="68" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/meal_carb_total"
                style="@style/ValuesMacrosMeal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/meal_fat_total"
                app:layout_constraintRight_toLeftOf="@id/meal_prot_total"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="237" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/meal_prot_total"
                style="@style/ValuesMacrosMeal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/meal_carb_total"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="155" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_meal_detail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_meal_overall"
        tools:listitem="@layout/item_food" />

</androidx.constraintlayout.widget.ConstraintLayout>